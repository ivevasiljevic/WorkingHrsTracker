<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <Button
        android:id="@+id/arrival_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Arrival"
        android:paddingVertical="16dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/departure_button"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        />

    <Button
        android:id="@+id/departure_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Departure"
        android:paddingVertical="16dp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/arrival_button"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        />

    <View
        android:id="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/lunch_start_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lunch start"
        android:paddingVertical="16dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/lunch_end_button"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        />

    <Button
        android:id="@+id/lunch_end_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lunch end"
        android:paddingVertical="16dp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/lunch_start_button"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        />

</androidx.constraintlayout.widget.ConstraintLayout>